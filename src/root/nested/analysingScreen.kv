#!text
#:kivy 1.9.1
#:import sm kivy.uix.screenmanager

<AnalysingScreen>:
	name: "screen2"
	screen_manager: screen_manager
	ScreenManager:
		id: screen_manager
		selection: selection
		display: display
		textResults: textResults
		Screen:
			id: selection
			name: "selection"
			layout: layout
			canvas.before:
		        Color:
		            rgba: 1, 1, 1, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		        Color:
					rgba: [0.77, 0.15, 0.15, 1]
				Rectangle:
			        pos: 0, self.height * 0.8
		            size: self.width, self.height * 0.2
		    FloatLayout:   
		    	id: layout
		    	region: region
		    	data_type: data_type  
				
				Label:
					pos: 0, self.parent.height * 0.8
					size_hint: (1, 0.2)
				    text: "ANALYSE EXISTING DATA"
				    halign: "center"
				    color: 1, 1, 1, 1
				        
		        Label:
					pos: self.parent.width * 0.05, self.parent.height * 0.57
					size_hint: (0.22, 0.08)
					text_size: self.size
					halign: "left"
				    text: "Region:"
				    color: 0, 0, 0, 1
				    
				MySpinner:
		            id: region
		            text: '<Select>'
		            pos: self.parent.width * 0.05, self.parent.height * 0.49
		            values: root.regions
			            
				Label:
					pos: self.parent.width * 0.05, self.parent.height * 0.73
					size_hint: (0.4, 0.08)
					text_size: self.size
					halign: "left"
				    text: "Data Used:"
				    color: 0, 0, 0, 1 
				
				MySpinner:
		            id: data_type
		            text: '<Select>'
		            pos: self.parent.width * 0.05, self.parent.height * 0.64
		            values: root.data_types
				
				Button:
					pos: self.parent.width * 0.55, self.parent.height * 0.05
					size_hint: (0.4, 0.18)
					background_color: [0.2, 0.2, 0.77, 1]
					background_normal: ''
				    text: "Predict and View Data"
				    on_press: root.start_analysis()
		Screen:
			id: display
			name: "display"
			display_layout: display_layout
			canvas.before:
		        Color:
		            rgba: 1, 1, 1, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		        Color:
					rgba: [0.77, 0.15, 0.15, 1]
				Rectangle:
			        pos: 0, self.height * 0.8
		            size: self.width, self.height * 0.2
		    FloatLayout:   
		    	id: display_layout
		    	graph: graph 
				Label:
					pos: 0, self.parent.height * 0.8
					size_hint: (1, 0.2)
				    text: "ANALYSIS RESULTS"
				    halign: "center"
				    color: 1, 1, 1, 1
				Image:
					id: graph
					pos: self.parent.width * 0.1, self.parent.height * -0.1
					size_hint: (0.8, 1)
					source: root.graphName
				Button:
					text: "<-"
					pos: 0, self.parent.height * 0.6
					size_hint: (0.1, 0.2)
					background_color: [0, 0, 1, 1]
					background_normal: ''
					on_press: root.screen_manager.current = "selection"
				Button:
					text: "->"
					pos: self.parent.width * 0.9, self.parent.height * 0.6
					size_hint: (0.1, 0.2)
					background_color: [0, 0, 1, 1]
					background_normal: ''
					on_press: root.screen_manager.current = "textResults"
		Screen:
			id: textResults
			name: "textResults"
			results_layout: results_layout
			canvas.before:
		        Color:
		            rgba: 1, 1, 1, 1
		        Rectangle:
		            pos: self.pos
		            size: self.size
		        Color:
					rgba: [0.77, 0.15, 0.15, 1]
				Rectangle:
			        pos: 0, self.height * 0.8
		            size: self.width, self.height * 0.2
		    FloatLayout:   
		    	id: results_layout
		    	results: results 
				Label:
					pos: 0, self.parent.height * 0.8
					size_hint: (1, 0.2)
				    text: "RESULTS EXPLAINED"
				    halign: "center"
				    color: 1, 1, 1, 1
				Label:
					id: results
					text_size: self.width * 0.8, None
					pos: 0, 0
					text: root.results_text
					color: 0, 0, 0, 1
					source: ''
				Button:
					text: "<-"
					pos: 0, self.parent.height * 0.6
					size_hint: (0.1, 0.2)
					background_color: [0, 0, 1, 1]
					background_normal: ''
					on_press: root.screen_manager.current = "display"