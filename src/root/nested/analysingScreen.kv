#!text
#:kivy 1.9.1
#:import sm kivy.uix.screenmanager

<AnalysingScreen>:
	name: "screen2"
	screen_manager: screen_manager
	images: images
	FloatLayout:
		id: images
		carousel: carousel
		Carousel:
			id: carousel
			direction: "right"
			scroll_timeout: 1
			loop: True
			canvas.after:
        		Color:
        			rgba: 1, 1, 1, 0.65
            	Rectangle:
            		pos: (self.width * 0.15, self.height * 0.15)
            		size: (self.width * 0.7, self.height * 0.7)
        	AsyncImage:
        		source: "imgs/northernireland.jpg"
        		allow_stretch: True
        		keep_ratio: False
	ScreenManager:
		id: screen_manager
		selection: selection
		display: display
		textResults: textResults
		Screen:
			id: selection
			name: "selection"
			layout: layout
		    FloatLayout:   
		    	id: layout
		    	region: region
		    	data_type: data_type  
				
				Label:
					pos: self.parent.width * 0.15, self.parent.height * 0.72
					size_hint: (0.7, 0.10)
					text_size: self.size
					font_size: 28
					halign: "center"
				    text: "Analyse Data"
				    color: 0, 0, 0, 1
				        
		        Label:
					pos: self.parent.width * 0.175, self.parent.height * 0.68
					size_hint: (0.22, 0.08)
					text_size: self.size
					halign: "left"
				    text: "Region:"
				    color: 0, 0, 0, 1
				    
				MySpinner:
		            id: region
		            text: '<Select>'
		            pos: self.parent.width * 0.175, self.parent.height * 0.59
		            values: root.regions
			            
				Label:
					pos: self.parent.width * 0.525, self.parent.height * 0.68
					size_hint: (0.2, 0.08)
					text_size: self.size
					halign: "left"
				    text: "Data Used:"
				    color: 0, 0, 0, 1 
				
				MySpinner:
		            id: data_type
		            text: '<Select>'
		            pos: self.parent.width * 0.525, self.parent.height * 0.59
		            size_hint: (0.3, 0.08)
		            values: root.data_types
				
				Button:
					pos: self.parent.width * 0.35, self.parent.height * 0.175
					size_hint: (0.3, 0.08)
					background_color: [0.2, 0.2, 0.77, 1]
					background_normal: ''
				    text: "Analyse and View Data"
				    on_press: root.start_analysis()
		Screen:
			id: display
			name: "display"
			display_layout: display_layout
		    FloatLayout:   
		    	id: display_layout
		    	graph: graph 
				Image:
					id: graph
					pos: self.parent.width * 0.175, self.parent.height * 0.175
					size_hint: (0.65, 0.65)
					source: root.graphName
					allow_stretch: True
					keep_ratio: False
				Button:
					pos: self.parent.width * 0.125, self.parent.height * 0.65
					size_hint: (0.1, 0.2)
					background_normal: 'imgs/back.png'
					background_down: 'imgs/back.png'
					on_press: root.screen_manager.current = "selection"
				Button:
					pos: self.parent.width * 0.9, self.parent.height * 0.6
					size_hint: (0.1, 0.2)
					background_normal: 'imgs/help.png'
					background_down: 'imgs/help.png'
					on_press: root.screen_manager.current = "textResults"
		Screen:
			id: textResults
			name: "textResults"
			results_layout: results_layout
		    FloatLayout:   
		    	id: results_layout
				Label:
					pos: self.parent.width * 0.15, self.parent.height * 0.72
					size_hint: (0.7, 0.1)
					text_size: self.size
					font_size: 28
					halign: "center"
				    text: "Results Explained"
				    color: 0, 0, 0, 1
				BoxLayout:
					pos: self.parent.width * 0.175, self.parent.height * 0.175
					size: self.parent.width * 0.65, self.parent.height * 0.5
					size_hint: (None, None)
					ScrollView:
						Label:
							id: results
							text: root.results_text
							color: 0, 0, 0, 1
							halign: "left"
							valign: "middle"
							text_size: self.width, None
							size_hint_y: None
        					height: self.texture_size[1]
				Button:
					pos: self.parent.width * 0.125, self.parent.height * 0.65
					size_hint: (0.1, 0.2)
					background_normal: 'imgs/back.png'
					background_down: 'imgs/back.png'
					on_press: root.screen_manager.current = "display"